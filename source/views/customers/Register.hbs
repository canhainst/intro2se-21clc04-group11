<div class="container-fluid" style="margin-top: 1%;">
    <form action="/account/register" method="post" id="signupForm">
        <p style="margin-left: 20%; margin-bottom: 20px; font-size: larger;font-weight:bolder;"> ACCOUNT INFORMATION </p>
        <div class="row offset-1 text-end" style="margin-left: 15%;">
            <label for="inputUserName" class="col-sm-3 col-form-label ps-5">USERNAME<span
                    style="color: red;">*</span></label>
            <div class="col-sm-5">
                <input type="text" class="form-control" name="inputUserName" id="inputUserName"
                    placeholder="Enter username" required>
            </div>
        </div>
        <small id="usernameErr" class="text-danger d-flex justify-content-center"></small>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <label for="inputPassword" class="col-sm-3 col-form-label ps-5">PASSWORD<span
                    style="color: red;">*</span></label>
            <div class="col-sm-5">
                <input type="password" class="form-control" name="inputPassword" id="inputPassword"
                    placeholder="Enter password" required>
            </div>
        </div>
        <small id="PwErr" class="text-danger d-flex justify-content-center"></small>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <label for="inputConfirmPassword" class="col-sm-3 col-form-label">CONFIRM PASSWORD<span
                    style="color: red;">*</span></label>
            <div class="col-sm-5">
                <input type="password" class="form-control" name="inputConfirmPassword" id="inputConfirmPassword"
                    placeholder="Enter confirm password" required>
            </div>
        </div>
        <small id="confirmPwErr" class="text-danger d-flex justify-content-center"></small>
        <p style="margin-left: 20%; margin-bottom: 20px; font-size: larger;font-weight:bolder;"> CUSTOMER INFORMATION </p>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <label for="inputName" class="col-sm-3 col-form-label ps-5">NAME<span style="color: red;">*</span></label>
            <div class="col-sm-5">
                <input type="text" class="form-control" name="inputName" id="inputName" placeholder="Enter name"
                    required>
            </div>
        </div>
        <small id="nameErr" class="text-danger d-flex justify-content-center"></small>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <label for="inputEmail" class="col-sm-3 col-form-label ps-5">EMAIL<span style="color: red;">*</span></label>
            <div class="col-sm-5">
                <input type="text" class="form-control" name="inputEmail" id="inputEmail" placeholder="Enter email"
                    required>
            </div>
        </div>
        <small id="emailErr" class="text-danger d-flex justify-content-center"></small>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <label for="inputNumberPhone" class="col-sm-3 col-form-label ps-5">PHONE<span
                    style="color: red;">*</span></label>
            <div class="col-sm-5">
                <input type="text" class="form-control" name="inputNumberPhone" id="inputNumberPhone"
                    placeholder="Enter number" required>
            </div>
        </div>
        <small id="phoneErr" class="text-danger d-flex justify-content-center"></small>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <span class="col-sm-3 col-form-label ps-5">GENDER</span>
            <div class="col" style="text-align: start;margin-top: 6px;">
                <div class="form-check form-check-inline" style="margin-right: 50px;">
                    <label for="male" class="form-check-label">Male</label>
                    <input class="form-check-input" type="radio" name="genderOptions" id="male" value="Male">
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label" for="Female">Female</label>
                    <input class="form-check-input" type="radio" name="genderOptions" id="female" value="Female">
                </div>
            </div>
        </div>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <label for="dob" class="col-sm-3 col-form-label ps-5">BIRTHDAY</label>
            <div class="col-sm-5">
                <input type="date" class="form-control" id="dob" name="dob">
            </div>
        </div>
        <div class="mt-3 row offset-1 text-end" style="margin-left: 15%;">
            <label for="inputAddress" class="col-sm-3 col-form-label ps-5">ADDRESS<span
                    style="color: red;">*</span></label>
            <div class="col-sm-5">
                <input type="text" class="form-control" name="inputAddress" id="inputAddress"
                    placeholder="Enter address" required>
            </div>
        </div>
        <div class="col-12 text-center mt-4">
            <button class="btn fw-bold ps-5 pe-5" type="submit" id="register"
                style="background-color: #3D5940;color: #fff;">SIGN UP</button>
        </div>
    </form>
</div>
<script>
    $(() => {
        $('#signupForm').submit(function (e) {
            //check fullname
            let regex = /[^a-zA-ZÀ-ỹ\s]/;
            $('#nameErr').html(regex.test($('#inputName').val()) ? '<i>the name consists of only letters</i>' : '');
            
            //check username
            regex = /[\/\\\[\];|=,+\*\?<>]/;
            $('#usernameErr').html(regex.test($('#inputUserName').val()) ? '<i>username does not contain the following characters / \ [ ] ; | = , + * ? < ></i>' : '');
            
            // check Password
            $('#PwErr').html(($('#inputPassword').val().length >= 8) ? '' : '<i>password must be at least 8 characters long</i>');
            
            //check confirmPassword
            $('#confirmPwErr').html(($('#inputPassword').val() != $('#inputConfirmPassword').val()) ? '<i>confirm password is incorrect</i>' : '');

            // check Email
            regex = /@gmail\.com/;
            $('#emailErr').html(regex.test($('#inputEmail').val()) ? '' : '<i>you need to use gmail</i>');

            // check Phone
            regex = /^\d/;
            $('#phoneErr').html(regex.test($('#inputPhoneNumber').val())? '<i>the phone just contains the numbers</i>' : '');
            
            if ($('#nameErr').html() === '' && $('#usernameErr').html() === '' &&  $('#PwErr').html() === '' &&
             $('#confirmPwErr').html() === '' && $('#emailErr').html() === '' && $('#phoneErr').html() === '') {
                $('#signupForm').submit();
            } else {
                e.preventDefault();
            }
        });
    })
</script>