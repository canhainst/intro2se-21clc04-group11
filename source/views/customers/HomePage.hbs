                </div>
                <p class="mt-3">
                  {{#each (generateArr Rating)}}
                  <i class="fas fa-star star"></i>
                  {{/each}}
                  {{#each (generateArr (sub 5 Rating)) }}
                  <i class="far fa-star star"></i>
                  {{/each}}
                </p>
              </div>
            </a>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <hr>
  <!-- week book -->
  {{#with featuredPrd}}
