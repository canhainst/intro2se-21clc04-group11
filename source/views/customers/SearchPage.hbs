<!-- sort by -->
{{#if filter}}
  <div class="row mt-4">
  <div class="offset-1 col">
    <span class="text-uppercase fw-bold ls-wide">sort by</span>
    <div class="dropdown d-inline-block ms-4">
      <button class="btn btn-secondary btn-sm dropdown-toggle bg-light text-dark" type="button"
        data-bs-toggle="dropdown" aria-expanded="false" style="width: 11rem;">
        {{filter}}
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/products/search?inputBook={{book}}&filter=Latest">Latest</a></li>
        <li><a class="dropdown-item" href="/products/search?inputBook={{book}}&filter=Best Seller">Best Seller</a></li>
        <li><a class="dropdown-item" href="/products/search?inputBook={{book}}&filter=Tittle (A to Z)">Title (A to Z)</a></li>
        <li><a class="dropdown-item" href="/products/search?inputBook={{book}}&filter=Tittle (Z to A)">Title (Z to A)</a></li>
        <li><a class="dropdown-item" href="/products/search?inputBook={{book}}&filter=Price (Low to High)">Price (Low to High)</a></li>
        <li><a class="dropdown-item" href="/products/search?inputBook={{book}}&filter=Price (High to Low)">Price (High to Low)</a></li>
      </ul>
    </div>
  </div>
</div>

{{/if}}

