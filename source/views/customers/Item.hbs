    <style>
        .rateStars{
            font-size: 17px;
            font-weight: 600;
        }
        .checkedStar {
            color: orange;
        }
        progress{
            background-color: #3D592C;
            height: 10px;
            width: 400px;
            border-radius: 100px;
            opacity: 0.3;
        }
        progress::-webkit-progress-value {
        background-color: rgb(0, 0, 0); 
        border-radius: 5px;
        }
        progress::-moz-progress-bar {
        background-color: rgb(0, 0, 0); 
        border-radius: 5px;
        }   
    </style>

<body>
    <!-- Item -->
    <div class="d-flex">
        <div style="width: 40%; padding-top: 50px; padding-bottom: 100px; text-align: center;">
            <img class="w-75" src={{Book.Photo}}>
        </div>
        <div style="width: 60%; padding: 30px;">
            <div style="color: #173F5F;
            font-size: 60px;
            font-style: normal;
            font-weight: 600;">
            {{Book.ProductName}}
        </div>
            <div style="color: #000;
            font-size: 32px;
            font-style: normal;
            font-weight: 600;
            ">
                <span>Author: {{Book.Author}}</span>
                <br>
                <span>Publisher: {{Book.PublishingCompany}}</span>
                <br>
                <span style="color: #EE4E4E;  font-size: 60px;">{{Book.PriceOut}} VNĐ</span>
                <div class="rateStars" style="font-size: 32px;">
                    <span class="fa fa-star checkedStar"></span>
                    <span class="fa fa-star checkedStar"></span>
                    <span class="fa fa-star checkedStar"></span>
                    <span class="fa fa-star checkedStar"></span>
                    <span class="fa fa-star"></span>
                </div>
                <br>
                <!-- quantity -->
                <div class="d-flex">
                    <span style="margin-right: 30px;">Quantity</span>
                    <div class="w-50">
                        <button type="button" id="item1-sub" class="btn border-dark" style="background-color: #D9D9D9;"><span class="fw-bold">-</span></button>
                        <button type="button" id="item1-quant" class="btn border-dark" style="background-color: #D9D9D9;"><span class="small">1</span></button>
                        <button type="button" id="item1-plus" class="btn border-dark" style="background-color: #D9D9D9;"><span class="fw-bold">+</span></button>
                    </div>
                </div>
                <div style="padding: 30px; padding-left: 0px;">
                    <button type="button" class="btn btn-success" style="color: #FFF;
                    text-align: center;
                    font-size: 40px;
                    border-radius: 30px;
                    border: 3px solid #000;
                    background: #3D5940;
                    width: 642px;
                    height: 106px;">
                    BUY NOW
                    </button>
                </div>
                <div>
                    <button type="button" class="btn btn-outline-secondary" style="color: #000;
                    text-align: center;
                    font-size: 40px;
                    border-radius: 30px;
                    border: 3px solid #000;
                    background: #FFF;
                    width: 642px;
                    height: 106px;">
                    ADD TO CART
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Description -->
    <div style="border: 1px solid #ABABAB;
    background: linear-gradient(146deg, #E6EDE5 74.5%, rgba(142, 189, 152, 0.00) 79.28%);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    padding: 100px;">
        <div style="color: #000;
        font-size: 48px;
        font-weight: 600;
        text-transform: capitalize;">
            Tóm Tắt Sản Phẩm
        </div>
        <br>
        <div style="color: #003C4A;
        text-align: justify;
        font-size: 32px;
        font-weight: 300;
        text-transform: capitalize;">
            {{Book.Descrip}}
        </div>
        
    </div>
    <br>
    <br>
    <!-- Feedback -->
    <div style="color: #000;
    font-size: 48px;
    text-transform: capitalize;
    padding: 100px;">
        Khách Hàng Đánh Giá
    </div>
    <div style="padding: 100px; padding-top: 0px;">
        <div style="color: #000;
        font-size: 30px;
        text-transform: capitalize;
        padding-bottom: 30px;">
        Tổng Quan
        </div>
        <div class="row"  style="align-items: end;">
            <div class="col-1" style="font-size: 50px;">4.0</div>
            <div class="col-3">
