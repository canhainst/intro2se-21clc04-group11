                                <td class="text-center">
                                    <button onclick="xemchitiet(2)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="pageInfo">
                        <span>Showing 1 - 8 results of </span>
                        <span>298</span>
                    </div>
                    <div class="pagebutton d-flex align-items-center">
                        <button class="page"><i class="fas fa-chevron-left"></i></button>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle no-border" style="background-color: white; color: black;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Page 01
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Page 02</a></li>
                                <li><a class="dropdown-item" href="#">Page 03</a></li>
                                <li><a class="dropdown-item" href="#">Page 04</a></li>
                                <li><a class="dropdown-item" href="#">Page 05</a></li>
                            </ul>
                        </div>
                        <button class="page"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </div>
            <div class="details">
                <div class="title">
                    <span style="margin-left: 45px;">Orders Details</span>
                </div>
                <button onclick="backtoorders()" class="back">BACK TO ORDERS</button>
                <div class="container" style="padding: 0;">
                    <div class="orderInfo">
                        <div class="row">
                            <div class="col-1">
                                <i class="far fa-calendar-alt" style="scale: 250%; margin: 15px 0 0 30px;"></i>
                            </div>
                            <div class="col-8">
                                <div class="time d-flex">
                                    
